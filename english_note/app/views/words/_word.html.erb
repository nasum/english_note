<div id="<%= dom_id word %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= word.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">WordClass:</strong>
    <%= word.word_class %>
  </p>
  <% word.word_means.each do |description|%>
    <p class="my-5">
      <strong class="block font-medium mb-1">WordMean:</strong>
      <%= description %>
    </p>
  <% end %>

  <% if action_name != "show" %>
    <%= link_to "Show this word", word.word, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this word', edit_word_path(word.word), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
