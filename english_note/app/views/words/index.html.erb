<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Words</h1>
    <%= link_to 'New word', new_word_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="words" class="min-w-full">
    <ul>
      <% @words.each do |word|%>
        <li class="my-5">
          <%= link_to word.name, word, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
